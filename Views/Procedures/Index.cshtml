@model IEnumerable<MMGC.Models.Procedure>
@{
    ViewData["Title"] = "Procedures";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-clipboard-pulse"></i> Procedures</h2>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> New Procedure
    </a>
</div>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Patient</th>
                        <th>Procedure Name</th>
                        <th>Type</th>
                        <th>Doctor</th>
                        <th>Date</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Patient?.FullName</td>
                            <td><strong>@item.ProcedureName</strong></td>
                            <td>@item.ProcedureType</td>
                            <td>@item.Doctor?.FullName</td>
                            <td>@item.ProcedureDate.ToString("dd MMM yyyy")</td>
                            <td>
                                @{
                                    var statusClass = item.Status switch
                                    {
                                        "Scheduled" => "bg-primary",
                                        "In Progress" => "bg-warning",
                                        "Completed" => "bg-success",
                                        "Cancelled" => "bg-danger",
                                        _ => "bg-secondary"
                                    };
                                }
                                <span class="badge @statusClass">@item.Status</span>
                            </td>
                            <td>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">
                                    <i class="bi bi-eye"></i> View
                                </a>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">
                                    <i class="bi bi-pencil"></i> Edit
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
