@model MMGC.Models.UserCreateViewModel
@{
    ViewData["Title"] = "Create User";
    Layout = "~/Views/Shared/_LayoutWithSidebar.cshtml";
}

<!-- Page Header -->
<div class="page-header">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h2><i class="bi bi-person-plus"></i> Create New User</h2>
            <p>Add a new user or administrator to the system</p>
        </div>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>
</div>

<div class="row">
    <div class="col-lg-10 col-xl-8">
        <div class="card">
            <div class="card-body">
                <form asp-action="Create" method="post" id="userForm">
                    <div asp-validation-summary="All" class="alert alert-danger" role="alert" style="display: none;"></div>
                    
                    <h5 class="mb-3"><i class="bi bi-person"></i> Personal Information</h5>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="FirstName" class="form-label"></label>
                            <input asp-for="FirstName" class="form-control" placeholder="Enter first name" required />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="LastName" class="form-label"></label>
                            <input asp-for="LastName" class="form-control" placeholder="Enter last name" required />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>

                    <h5 class="mb-3 mt-4"><i class="bi bi-envelope"></i> Account Information</h5>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label"></label>
                        <input asp-for="Email" class="form-control" type="email" placeholder="user@example.com" required />
                        <span asp-validation-for="Email" class="text-danger"></span>
                        <small class="text-muted">This will also be used as the username</small>
                    </div>

                    <div class="mb-3">
                        <label asp-for="PhoneNumber" class="form-label"></label>
                        <input asp-for="PhoneNumber" class="form-control" type="tel" placeholder="+92-300-1234567" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>

                    <h5 class="mb-3 mt-4"><i class="bi bi-lock"></i> Password</h5>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Password" class="form-label"></label>
                            <input asp-for="Password" class="form-control" type="password" placeholder="Enter password" required />
                            <span asp-validation-for="Password" class="text-danger"></span>
                            <small class="text-muted">Minimum 6 characters</small>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="ConfirmPassword" class="form-label"></label>
                            <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Confirm password" required />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>

                    <h5 class="mb-3 mt-4"><i class="bi bi-shield-check"></i> Role & Settings</h5>

                    <div class="mb-3">
                        <label asp-for="Role" class="form-label"></label>
                        <select asp-for="Role" class="form-select" asp-items="ViewBag.Roles" id="roleSelect" required>
                            <option value="">-- Select Role --</option>
                        </select>
                        <span asp-validation-for="Role" class="text-danger"></span>
                        <small class="text-muted">Select the role for this user</small>
                    </div>

                    <!-- Doctor-specific fields -->
                    <div id="doctorFields" class="role-specific-fields" style="display: none;">
                        <h6 class="mb-3 mt-3 text-primary"><i class="bi bi-person-badge"></i> Doctor Information</h6>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Specialization" class="form-label"></label>
                                <input asp-for="Specialization" class="form-control" placeholder="e.g., Cardiology, Pediatrics" />
                                <span asp-validation-for="Specialization" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="LicenseNumber" class="form-label"></label>
                                <input asp-for="LicenseNumber" class="form-control" placeholder="Medical license number" />
                                <span asp-validation-for="LicenseNumber" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="ConsultationFee" class="form-label"></label>
                                <div class="input-group">
                                    <span class="input-group-text">â‚¹</span>
                                    <input asp-for="ConsultationFee" class="form-control" type="number" step="0.01" placeholder="0.00" />
                                </div>
                                <span asp-validation-for="ConsultationFee" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Address" class="form-label"></label>
                                <input asp-for="Address" class="form-control" placeholder="Address" />
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <!-- Nurse-specific fields -->
                    <div id="nurseFields" class="role-specific-fields" style="display: none;">
                        <h6 class="mb-3 mt-3 text-primary"><i class="bi bi-heart-pulse"></i> Nurse Information</h6>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Department" class="form-label"></label>
                                <input asp-for="Department" class="form-control" placeholder="e.g., Emergency, ICU" />
                                <span asp-validation-for="Department" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="LicenseNumber" class="form-label">License/Certification Number</label>
                                <input asp-for="LicenseNumber" class="form-control" placeholder="Nursing license number" />
                                <span asp-validation-for="LicenseNumber" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <!-- Staff-specific fields (ReceptionStaff, AccountsStaff, LabStaff) -->
                    <div id="staffFields" class="role-specific-fields" style="display: none;">
                        <h6 class="mb-3 mt-3 text-primary"><i class="bi bi-briefcase"></i> Staff Information</h6>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Department" class="form-label"></label>
                                <input asp-for="Department" class="form-control" placeholder="Department name" />
                                <span asp-validation-for="Department" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="EmployeeId" class="form-label"></label>
                                <input asp-for="EmployeeId" class="form-control" placeholder="Employee ID" />
                                <span asp-validation-for="EmployeeId" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <div class="form-check">
                            <input asp-for="EmailConfirmed" class="form-check-input" type="checkbox" />
                            <label asp-for="EmailConfirmed" class="form-check-label">
                                Email Confirmed
                            </label>
                        </div>
                        <small class="text-muted">Check this if the email is already verified</small>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-x-circle"></i> Cancel
                        </a>
                        <button type="submit" class="btn btn-primary" id="submitBtn">
                            <i class="bi bi-check-circle"></i> Create User
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var form = document.getElementById('userForm');
            var submitBtn = document.getElementById('submitBtn');
            var validationSummary = document.querySelector('[asp-validation-summary]');
            var roleSelect = document.getElementById('roleSelect');

            // Show/hide role-specific fields based on selected role
            function toggleRoleFields() {
                var selectedRole = roleSelect.value;
                
                // Hide all role-specific fields
                document.querySelectorAll('.role-specific-fields').forEach(function(field) {
                    field.style.display = 'none';
                });

                // Show relevant fields based on role
                if (selectedRole === 'Doctor') {
                    document.getElementById('doctorFields').style.display = 'block';
                } else if (selectedRole === 'Nurse') {
                    document.getElementById('nurseFields').style.display = 'block';
                } else if (['ReceptionStaff', 'AccountsStaff', 'LabStaff'].includes(selectedRole)) {
                    document.getElementById('staffFields').style.display = 'block';
                }
            }

            // Listen for role changes
            if (roleSelect) {
                roleSelect.addEventListener('change', toggleRoleFields);
                // Trigger on page load if role is already selected
                toggleRoleFields();
            }

            form.addEventListener('submit', function(e) {
                if (!form.checkValidity()) {
                    e.preventDefault();
                    e.stopPropagation();
                    if (validationSummary) {
                        validationSummary.style.display = 'block';
                    }
                } else {
                    submitBtn.disabled = true;
                    submitBtn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Creating...';
                }
            });

            // Show validation summary if there are errors
            if (validationSummary && validationSummary.querySelectorAll('.text-danger').length > 0) {
                validationSummary.style.display = 'block';
            }
        });
    </script>
}

