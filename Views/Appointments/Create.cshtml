@model MMGC.Models.Appointment
@{
    ViewData["Title"] = "Create Appointment";
    var patients = ViewBag.Patients as IEnumerable<MMGC.Models.Patient>;
    var doctors = ViewBag.Doctors as IEnumerable<MMGC.Models.Doctor>;
    var nurses = ViewBag.Nurses as IEnumerable<MMGC.Models.Nurse>;
}

<h2><i class="bi bi-calendar-plus"></i> Create New Appointment</h2>
<hr />

<div class="row">
    <div class="col-md-8">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="mb-3">
                <label asp-for="PatientId" class="form-label"></label>
                <select asp-for="PatientId" class="form-select" asp-items="@(new SelectList(patients, "Id", "FullName"))">
                    <option value="">Select Patient</option>
                </select>
                <span asp-validation-for="PatientId" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="DoctorId" class="form-label"></label>
                    <select asp-for="DoctorId" class="form-select" asp-items="@(new SelectList(doctors, "Id", "FullName"))">
                        <option value="">Select Doctor (Optional)</option>
                    </select>
                    <span asp-validation-for="DoctorId" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="NurseId" class="form-label"></label>
                    <select asp-for="NurseId" class="form-select" asp-items="@(new SelectList(nurses, "Id", "FullName"))">
                        <option value="">Select Nurse (Optional)</option>
                    </select>
                    <span asp-validation-for="NurseId" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="AppointmentDate" class="form-label"></label>
                    <input asp-for="AppointmentDate" class="form-control" type="datetime-local" />
                    <span asp-validation-for="AppointmentDate" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="AppointmentType" class="form-label"></label>
                    <select asp-for="AppointmentType" class="form-select">
                        <option value="General">General</option>
                        <option value="Follow-up">Follow-up</option>
                        <option value="Emergency">Emergency</option>
                        <option value="Consultation">Consultation</option>
                    </select>
                    <span asp-validation-for="AppointmentType" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="Reason" class="form-label"></label>
                <textarea asp-for="Reason" class="form-control" rows="2"></textarea>
                <span asp-validation-for="Reason" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Notes" class="form-label"></label>
                <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ConsultationFee" class="form-label"></label>
                <input asp-for="ConsultationFee" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="ConsultationFee" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-save"></i> Create Appointment
                </button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
