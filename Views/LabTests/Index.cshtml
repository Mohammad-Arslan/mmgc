@model IEnumerable<MMGC.Models.LabTest>
@{
    ViewData["Title"] = "Lab Tests";
    Layout = "~/Views/Shared/_LayoutWithSidebar.cshtml";
}

<!-- Page Header -->
<div class="page-header">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h2><i class="bi bi-flask"></i> Lab Tests</h2>
            <p>Manage laboratory tests and reports</p>
        </div>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> New Lab Test
        </a>
    </div>
</div>

<!-- Search and Filter -->
<div class="card mb-4">
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-search"></i></span>
                    <input type="text" id="tableSearch" class="form-control" placeholder="Search lab tests...">
                </div>
            </div>
            <div class="col-md-6 text-end">
                <span class="badge bg-warning fs-6">Total: @Model.Count() Tests</span>
            </div>
        </div>
    </div>
</div>

<!-- Lab Tests Table -->
<div class="card">
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th><i class="bi bi-person"></i> Patient</th>
                            <th><i class="bi bi-flask"></i> Test Name</th>
                            <th><i class="bi bi-tag"></i> Category</th>
                            <th><i class="bi bi-calendar"></i> Date</th>
                            <th><i class="bi bi-info-circle"></i> Status</th>
                            <th><i class="bi bi-gear"></i> Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-circle bg-warning text-white me-2" style="width: 35px; height: 35px; border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                                            @(item.Patient?.FullName?.Substring(0, 1).ToUpper() ?? "P")
                                        </div>
                                        <strong>@item.Patient?.FullName</strong>
                                    </div>
                                </td>
                                <td><strong>@item.TestName</strong></td>
                                <td><span class="badge bg-secondary">@item.LabTestCategory?.CategoryName</span></td>
                                <td>
                                    <i class="bi bi-calendar-event text-primary"></i> 
                                    @item.TestDate.ToString("dd MMM yyyy")
                                </td>
                                <td>
                                    @{
                                        var statusClass = item.Status switch
                                        {
                                            "Pending" => "bg-secondary",
                                            "Sample Collected" => "bg-info",
                                            "In Progress" => "bg-warning",
                                            "Completed" => "bg-success",
                                            "Cancelled" => "bg-danger",
                                            _ => "bg-secondary"
                                        };
                                    }
                                    <span class="badge @statusClass">
                                        <i class="bi bi-circle-fill" style="font-size: 0.5rem;"></i> @item.Status
                                    </span>
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info" data-bs-toggle="tooltip" title="View Details">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        @if (item.Status != "Completed")
                                        {
                                            <a asp-action="UploadReport" asp-route-id="@item.Id" class="btn btn-sm btn-success" data-bs-toggle="tooltip" title="Upload Report">
                                                <i class="bi bi-upload"></i>
                                            </a>
                                        }
                                        else
                                        {
                                            <button class="btn btn-sm btn-primary" data-bs-toggle="tooltip" title="View Report">
                                                <i class="bi bi-file-earmark-text"></i>
                                            </button>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-flask" style="font-size: 4rem; color: #e0e0e0;"></i>
                <p class="text-muted mt-3 mb-0">No lab tests recorded yet.</p>
                <a asp-action="Create" class="btn btn-primary mt-3">
                    <i class="bi bi-plus-circle"></i> Create First Lab Test
                </a>
            </div>
        }
    </div>
</div>
