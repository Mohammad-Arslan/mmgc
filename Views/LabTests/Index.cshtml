@model IEnumerable<MMGC.Models.LabTest>
@{
    ViewData["Title"] = "Lab Tests";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-flask"></i> Lab Tests</h2>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> New Lab Test
    </a>
</div>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Patient</th>
                        <th>Test Name</th>
                        <th>Category</th>
                        <th>Date</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Patient?.FullName</td>
                            <td><strong>@item.TestName</strong></td>
                            <td>@item.LabTestCategory?.CategoryName</td>
                            <td>@item.TestDate.ToString("dd MMM yyyy")</td>
                            <td>
                                @{
                                    var statusClass = item.Status switch
                                    {
                                        "Pending" => "bg-secondary",
                                        "Sample Collected" => "bg-info",
                                        "In Progress" => "bg-warning",
                                        "Completed" => "bg-success",
                                        "Cancelled" => "bg-danger",
                                        _ => "bg-secondary"
                                    };
                                }
                                <span class="badge @statusClass">@item.Status</span>
                            </td>
                            <td>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">
                                    <i class="bi bi-eye"></i> View
                                </a>
                                @if (item.Status != "Completed")
                                {
                                    <a asp-action="UploadReport" asp-route-id="@item.Id" class="btn btn-sm btn-success">
                                        <i class="bi bi-upload"></i> Upload Report
                                    </a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
