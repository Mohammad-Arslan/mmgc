@{
    ViewData["Title"] = "Lab Staff Dashboard";
    Layout = "~/Views/Shared/_LayoutWithSidebar.cshtml";
}

<!-- Page Header -->
<div class="page-header">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h2><i class="bi bi-speedometer2"></i> Lab Staff Dashboard</h2>
            <p>Laboratory Management Overview</p>
        </div>
    </div>
</div>

<!-- Overview Cards -->
<div class="row">
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="dashboard-card">
            <div class="d-flex justify-content-between align-items-start">
                <div>
                    <p class="text-muted mb-2 fw-semibold">Total Tests</p>
                    <h2 class="mb-0 fw-bold">@(ViewBag.TotalTests ?? 0)</h2>
                    <small class="text-info"><i class="bi bi-clipboard-data"></i> All Time</small>
                </div>
                <div class="dashboard-icon icon-primary">
                    <i class="bi bi-clipboard-data"></i>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="dashboard-card">
            <div class="d-flex justify-content-between align-items-start">
                <div>
                    <p class="text-muted mb-2 fw-semibold">Pending Tests</p>
                    <h2 class="mb-0 fw-bold">@(ViewBag.PendingTests ?? 0)</h2>
                    <small class="text-warning"><i class="bi bi-hourglass-split"></i> Awaiting Processing</small>
                </div>
                <div class="dashboard-icon icon-warning">
                    <i class="bi bi-hourglass-split"></i>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="dashboard-card">
            <div class="d-flex justify-content-between align-items-start">
                <div>
                    <p class="text-muted mb-2 fw-semibold">In Progress</p>
                    <h2 class="mb-0 fw-bold">@(ViewBag.InProgressTests ?? 0)</h2>
                    <small class="text-info"><i class="bi bi-arrow-repeat"></i> Being Processed</small>
                </div>
                <div class="dashboard-icon icon-info">
                    <i class="bi bi-arrow-repeat"></i>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="dashboard-card">
            <div class="d-flex justify-content-between align-items-start">
                <div>
                    <p class="text-muted mb-2 fw-semibold">Completed</p>
                    <h2 class="mb-0 fw-bold">@(ViewBag.CompletedTests ?? 0)</h2>
                    <small class="text-success"><i class="bi bi-check-circle"></i> Finished</small>
                </div>
                <div class="dashboard-icon icon-success">
                    <i class="bi bi-check-circle"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="dashboard-card">
            <div class="d-flex justify-content-between align-items-start">
                <div>
                    <p class="text-muted mb-2 fw-semibold">Today's Tests</p>
                    <h2 class="mb-0 fw-bold">@(ViewBag.TodayTests ?? 0)</h2>
                    <small class="text-primary"><i class="bi bi-calendar-day"></i> Scheduled Today</small>
                </div>
                <div class="dashboard-icon icon-primary">
                    <i class="bi bi-calendar-day"></i>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="dashboard-card">
            <div class="d-flex justify-content-between align-items-start">
                <div>
                    <p class="text-muted mb-2 fw-semibold">Pending Reports</p>
                    <h2 class="mb-0 fw-bold">@(ViewBag.PendingReports ?? 0)</h2>
                    <small class="text-danger"><i class="bi bi-file-earmark-arrow-up"></i> Need Upload</small>
                </div>
                <div class="dashboard-icon icon-danger">
                    <i class="bi bi-file-earmark-arrow-up"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Quick Actions -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0"><i class="bi bi-lightning-charge"></i> Quick Actions</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3 mb-3">
                        <a asp-action="Create" class="btn btn-outline-primary w-100">
                            <i class="bi bi-plus-circle"></i><br>
                            Book Test
                        </a>
                    </div>
                    <div class="col-md-3 mb-3">
                        <a asp-action="Index" class="btn btn-outline-info w-100">
                            <i class="bi bi-list-ul"></i><br>
                            All Tests
                        </a>
                    </div>
                    <div class="col-md-3 mb-3">
                        <a asp-action="Index" asp-route-status="Pending" class="btn btn-outline-warning w-100">
                            <i class="bi bi-hourglass-split"></i><br>
                            Pending Queue
                        </a>
                    </div>
                    <div class="col-md-3 mb-3">
                        <a asp-action="Index" asp-route-status="Completed" class="btn btn-outline-success w-100">
                            <i class="bi bi-check-circle"></i><br>
                            Completed
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Recent Activities -->
<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="bi bi-hourglass-split"></i> Pending Queue</h5>
                <a asp-action="Index" asp-route-status="Pending" class="btn btn-sm btn-outline-primary">
                    <i class="bi bi-eye"></i> View All
                </a>
            </div>
            <div class="card-body">
                @{
                    var pendingQueue = ViewBag.PendingQueue as IEnumerable<MMGC.Models.LabTest>;
                }
                @if (pendingQueue != null && pendingQueue.Any())
                {
                    <div class="list-group list-group-flush">
                        @foreach (var test in pendingQueue)
                        {
                            <div class="list-group-item px-0 py-2 border-0 border-bottom">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div class="flex-grow-1">
                                        <div class="d-flex align-items-center mb-1">
                                            <div class="avatar-circle bg-warning text-white me-2" style="width: 32px; height: 32px; border-radius: 50%; display: flex; align-items: center; justify-content: center; font-size: 0.875rem;">
                                                @(test.Patient?.FullName?.Substring(0, 1).ToUpper() ?? "P")
                                            </div>
                                            <strong class="me-2">@test.TestName</strong>
                                            <span class="badge bg-warning">@test.Status</span>
                                        </div>
                                        <p class="text-muted mb-1 small">
                                            <i class="bi bi-person"></i> @(test.Patient?.FullName ?? "Unknown Patient")
                                        </p>
                                        <p class="text-muted mb-0 small">
                                            <i class="bi bi-calendar-event"></i> @test.TestDate.ToString("dd MMM yyyy HH:mm")
                                        </p>
                                    </div>
                                    <div>
                                        <a asp-action="Details" asp-route-id="@test.Id" class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="alert alert-info mb-0">
                        <i class="bi bi-info-circle"></i> No pending tests in queue.
                    </div>
                }
            </div>
        </div>
    </div>
    
    <div class="col-md-6">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="bi bi-clock-history"></i> Recent Tests</h5>
                <a asp-action="Index" class="btn btn-sm btn-outline-primary">
                    <i class="bi bi-eye"></i> View All
                </a>
            </div>
            <div class="card-body">
                @{
                    var recentTests = ViewBag.RecentTests as IEnumerable<MMGC.Models.LabTest>;
                }
                @if (recentTests != null && recentTests.Any())
                {
                    <div class="list-group list-group-flush">
                        @foreach (var test in recentTests)
                        {
                            <div class="list-group-item px-0 py-2 border-0 border-bottom">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div class="flex-grow-1">
                                        <div class="d-flex align-items-center mb-1">
                                            <div class="avatar-circle bg-primary text-white me-2" style="width: 32px; height: 32px; border-radius: 50%; display: flex; align-items: center; justify-content: center; font-size: 0.875rem;">
                                                @(test.Patient?.FullName?.Substring(0, 1).ToUpper() ?? "P")
                                            </div>
                                            <strong class="me-2">@test.TestName</strong>
                                            @{
                                                var statusClass = test.Status switch
                                                {
                                                    "Completed" => "bg-success",
                                                    "In Progress" => "bg-info",
                                                    "Sample Collected" => "bg-info",
                                                    "Pending" => "bg-warning",
                                                    "Cancelled" => "bg-danger",
                                                    _ => "bg-secondary"
                                                };
                                            }
                                            <span class="badge @statusClass">@test.Status</span>
                                        </div>
                                        <p class="text-muted mb-1 small">
                                            <i class="bi bi-person"></i> @(test.Patient?.FullName ?? "Unknown Patient")
                                        </p>
                                        <p class="text-muted mb-0 small">
                                            <i class="bi bi-calendar-event"></i> @test.TestDate.ToString("dd MMM yyyy HH:mm")
                                        </p>
                                    </div>
                                    <div>
                                        <a asp-action="Details" asp-route-id="@test.Id" class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="alert alert-info mb-0">
                        <i class="bi bi-info-circle"></i> No recent tests found.
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-refresh dashboard every 5 minutes
        setTimeout(function() {
            location.reload();
        }, 300000);
    </script>
}
