@{
    ViewData["Title"] = "Nurses Dashboard";
    Layout = "~/Views/Shared/_LayoutWithSidebar.cshtml";
    var nurse = ViewBag.Nurse as MMGC.Models.Nurse;
}

<!-- Page Header -->
<div class="page-header">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h2><i class="bi bi-speedometer2"></i> Nurses Dashboard</h2>
            <p>Welcome@(nurse != null ? $", {nurse.FullName}" : "") - Nursing Management Overview</p>
        </div>
    </div>
</div>

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle"></i> <strong>Warning:</strong> @ViewBag.ErrorMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Overview Cards -->
<div class="row">
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="dashboard-card">
            <div class="d-flex justify-content-between align-items-start">
                <div>
                    <p class="text-muted mb-2 fw-semibold">Today's Notes</p>
                    <h2 class="mb-0 fw-bold">@(ViewBag.TodayNotes ?? 0)</h2>
                    <small class="text-info"><i class="bi bi-clipboard"></i> Recorded Today</small>
                </div>
                <div class="dashboard-icon icon-primary">
                    <i class="bi bi-file-text"></i>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="dashboard-card">
            <div class="d-flex justify-content-between align-items-start">
                <div>
                    <p class="text-muted mb-2 fw-semibold">My Procedures</p>
                    <h2 class="mb-0 fw-bold">@(ViewBag.MyProcedures ?? 0)</h2>
                    <small class="text-success"><i class="bi bi-clipboard-pulse"></i> Assigned</small>
                </div>
                <div class="dashboard-icon icon-success">
                    <i class="bi bi-clipboard-pulse"></i>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="dashboard-card">
            <div class="d-flex justify-content-between align-items-start">
                <div>
                    <p class="text-muted mb-2 fw-semibold">My Notes</p>
                    <h2 class="mb-0 fw-bold">@(ViewBag.MyNotes ?? 0)</h2>
                    <small class="text-info"><i class="bi bi-file-text"></i> Total</small>
                </div>
                <div class="dashboard-icon icon-info">
                    <i class="bi bi-file-text"></i>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="dashboard-card">
            <div class="d-flex justify-content-between align-items-start">
                <div>
                    <p class="text-muted mb-2 fw-semibold">Vitals Recorded</p>
                    <h2 class="mb-0 fw-bold">@(ViewBag.MyVitals ?? 0)</h2>
                    <small class="text-warning"><i class="bi bi-heart-pulse"></i> Total</small>
                </div>
                <div class="dashboard-icon icon-warning">
                    <i class="bi bi-heart-pulse"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Quick Actions -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0"><i class="bi bi-lightning-charge"></i> Quick Actions</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3 mb-3">
                        <a asp-action="RecordVitals" class="btn btn-outline-primary w-100">
                            <i class="bi bi-heart-pulse"></i><br>
                            Record Vitals
                        </a>
                    </div>
                    <div class="col-md-3 mb-3">
                        <a asp-action="CreateNursingNote" class="btn btn-outline-success w-100">
                            <i class="bi bi-file-text"></i><br>
                            Create Note
                        </a>
                    </div>
                    <div class="col-md-3 mb-3">
                        <a asp-action="NursingNotes" class="btn btn-outline-info w-100">
                            <i class="bi bi-clipboard"></i><br>
                            View Notes
                        </a>
                    </div>
                    <div class="col-md-3 mb-3">
                        <a asp-action="PatientVitals" class="btn btn-outline-warning w-100">
                            <i class="bi bi-graph-up"></i><br>
                            View Vitals
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Recent Activities -->
<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="bi bi-clipboard"></i> Recent Nursing Notes</h5>
                <a asp-action="NursingNotes" class="btn btn-sm btn-outline-primary">
                    <i class="bi bi-eye"></i> View All Notes
                </a>
            </div>
            <div class="card-body">
                @{
                    var recentNotes = ViewBag.RecentNotes as IEnumerable<MMGC.Models.NursingNote>;
                }
                @if (recentNotes != null && recentNotes.Any())
                {
                    <div class="list-group list-group-flush">
                        @foreach (var note in recentNotes)
                        {
                            <div class="list-group-item px-0 py-2 border-0 border-bottom">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div class="flex-grow-1">
                                        <div class="d-flex align-items-center mb-1">
                                            <div class="avatar-circle bg-primary text-white me-2" style="width: 32px; height: 32px; border-radius: 50%; display: flex; align-items: center; justify-content: center; font-size: 0.875rem;">
                                                @(note.Patient?.FullName?.Substring(0, 1).ToUpper() ?? "P")
                                            </div>
                                            <strong class="me-2">@(note.Patient?.FullName ?? "Unknown Patient")</strong>
                                            @if (note.Procedure != null)
                                            {
                                                <span class="badge bg-secondary">@note.Procedure.ProcedureName</span>
                                            }
                                        </div>
                                        <p class="text-muted mb-1 small">
                                            <i class="bi bi-calendar-event"></i> @note.NoteDate.ToString("dd MMM yyyy HH:mm")
                                        </p>
                                        @if (!string.IsNullOrEmpty(note.Notes))
                                        {
                                            <p class="mb-0 small text-truncate" style="max-width: 100%;">
                                                @(note.Notes.Length > 80 ? note.Notes.Substring(0, 80) + "..." : note.Notes)
                                            </p>
                                        }
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="alert alert-info mb-0">
                        <i class="bi bi-info-circle"></i> No recent nursing notes found.
                    </div>
                }
            </div>
        </div>
    </div>
    
    <div class="col-md-6">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="bi bi-heart-pulse"></i> Recent Vitals</h5>
                <a asp-action="PatientVitals" class="btn btn-sm btn-outline-primary">
                    <i class="bi bi-eye"></i> View All Vitals
                </a>
            </div>
            <div class="card-body">
                @{
                    var recentVitals = ViewBag.RecentVitals as IEnumerable<MMGC.Models.PatientVital>;
                }
                @if (recentVitals != null && recentVitals.Any())
                {
                    <div class="list-group list-group-flush">
                        @foreach (var vital in recentVitals)
                        {
                            <div class="list-group-item px-0 py-2 border-0 border-bottom">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div class="flex-grow-1">
                                        <div class="d-flex align-items-center mb-1">
                                            <div class="avatar-circle bg-danger text-white me-2" style="width: 32px; height: 32px; border-radius: 50%; display: flex; align-items: center; justify-content: center; font-size: 0.875rem;">
                                                @(vital.Patient?.FullName?.Substring(0, 1).ToUpper() ?? "P")
                                            </div>
                                            <strong class="me-2">@(vital.Patient?.FullName ?? "Unknown Patient")</strong>
                                        </div>
                                        <p class="text-muted mb-1 small">
                                            <i class="bi bi-calendar-event"></i> @vital.RecordedDate.ToString("dd MMM yyyy HH:mm")
                                        </p>
                                        <div class="d-flex flex-wrap gap-2 small">
                                            @if (vital.BloodPressureSystolic.HasValue)
                                            {
                                                <span class="badge bg-primary">
                                                    <i class="bi bi-heart-pulse"></i> BP: @vital.BloodPressureSystolic/@vital.BloodPressureDiastolic
                                                </span>
                                            }
                                            @if (vital.Temperature.HasValue)
                                            {
                                                <span class="badge bg-warning text-dark">
                                                    <i class="bi bi-thermometer-half"></i> @vital.Temperature.Value.ToString("F1")°F
                                                </span>
                                            }
                                            @if (vital.Pulse.HasValue)
                                            {
                                                <span class="badge bg-info">
                                                    <i class="bi bi-activity"></i> Pulse: @vital.Pulse
                                                </span>
                                            }
                                            @if (vital.OxygenSaturation.HasValue)
                                            {
                                                <span class="badge bg-success">
                                                    <i class="bi bi-lungs"></i> SpO₂: @vital.OxygenSaturation%
                                                </span>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="alert alert-info mb-0">
                        <i class="bi bi-info-circle"></i> No recent vitals found.
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-refresh dashboard every 5 minutes
        setTimeout(function() {
            location.reload();
        }, 300000);
    </script>
}
