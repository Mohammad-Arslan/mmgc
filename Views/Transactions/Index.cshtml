@model IEnumerable<MMGC.Models.Transaction>
@{
    ViewData["Title"] = "Transactions";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-cash-coin"></i> Transactions</h2>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> New Transaction
    </a>
</div>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Patient</th>
                        <th>Description</th>
                        <th>Type</th>
                        <th>Amount</th>
                        <th>Payment Mode</th>
                        <th>Date</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Patient?.FullName</td>
                            <td>@item.Description</td>
                            <td>@item.TransactionType</td>
                            <td><strong>â‚¹@item.Amount.ToString("N2")</strong></td>
                            <td>@item.PaymentMode</td>
                            <td>@item.TransactionDate.ToString("dd MMM yyyy")</td>
                            <td>
                                @{
                                    var statusClass = item.Status switch
                                    {
                                        "Pending" => "bg-warning",
                                        "Completed" => "bg-success",
                                        "Refunded" => "bg-info",
                                        "Cancelled" => "bg-danger",
                                        _ => "bg-secondary"
                                    };
                                }
                                <span class="badge @statusClass">@item.Status</span>
                            </td>
                            <td>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">
                                    <i class="bi bi-eye"></i> View
                                </a>
                                @if (!item.InvoiceGenerated)
                                {
                                    <button onclick="generateInvoice(@item.Id)" class="btn btn-sm btn-success">
                                        <i class="bi bi-file-earmark-pdf"></i> Generate Invoice
                                    </button>
                                }
                                else
                                {
                                    <a href="@item.InvoicePath" target="_blank" class="btn btn-sm btn-primary">
                                        <i class="bi bi-download"></i> Download Invoice
                                    </a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function generateInvoice(id) {
            fetch(`/Transactions/GenerateInvoice/${id}`, { method: 'POST' })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        alert('Invoice generated successfully!');
                        location.reload();
                    } else {
                        alert('Failed to generate invoice: ' + data.message);
                    }
                });
        }
    </script>
}
