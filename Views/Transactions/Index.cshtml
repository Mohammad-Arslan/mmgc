@model IEnumerable<MMGC.Models.Transaction>
@{
    ViewData["Title"] = "Transactions";
    Layout = "~/Views/Shared/_LayoutWithSidebar.cshtml";
    var totalAmount = Model.Sum(t => t.Amount);
}

<!-- Page Header -->
<div class="page-header">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h2><i class="bi bi-cash-coin"></i> Transactions</h2>
            <p>Manage financial transactions and invoices</p>
        </div>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> New Transaction
        </a>
    </div>
</div>

<!-- Summary Cards -->
<div class="row mb-4">
    <div class="col-md-4">
        <div class="dashboard-card">
            <div class="d-flex justify-content-between align-items-start">
                <div>
                    <p class="text-muted mb-2 fw-semibold">Total Transactions</p>
                    <h3 class="mb-0 fw-bold">@Model.Count()</h3>
                </div>
                <div class="dashboard-icon icon-primary">
                    <i class="bi bi-receipt"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="dashboard-card">
            <div class="d-flex justify-content-between align-items-start">
                <div>
                    <p class="text-muted mb-2 fw-semibold">Total Amount</p>
                    <h3 class="mb-0 fw-bold text-success">₹@totalAmount.ToString("N2")</h3>
                </div>
                <div class="dashboard-icon icon-success">
                    <i class="bi bi-cash-stack"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="dashboard-card">
            <div class="d-flex justify-content-between align-items-start">
                <div>
                    <p class="text-muted mb-2 fw-semibold">Pending Payments</p>
                    <h3 class="mb-0 fw-bold text-warning">@Model.Count(t => t.Status == "Pending")</h3>
                </div>
                <div class="dashboard-icon icon-warning">
                    <i class="bi bi-hourglass-split"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Search and Filter -->
<div class="card mb-4">
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-search"></i></span>
                    <input type="text" id="tableSearch" class="form-control" placeholder="Search transactions...">
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Transactions Table -->
<div class="card">
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th><i class="bi bi-person"></i> Patient</th>
                            <th><i class="bi bi-file-text"></i> Description</th>
                            <th><i class="bi bi-tag"></i> Type</th>
                            <th><i class="bi bi-cash"></i> Amount</th>
                            <th><i class="bi bi-credit-card"></i> Payment Mode</th>
                            <th><i class="bi bi-calendar"></i> Date</th>
                            <th><i class="bi bi-info-circle"></i> Status</th>
                            <th><i class="bi bi-gear"></i> Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-circle bg-success text-white me-2" style="width: 35px; height: 35px; border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                                            @(item.Patient?.FullName?.Substring(0, 1).ToUpper() ?? "P")
                                        </div>
                                        <strong>@item.Patient?.FullName</strong>
                                    </div>
                                </td>
                                <td>@item.Description</td>
                                <td><span class="badge bg-secondary">@item.TransactionType</span></td>
                                <td><strong class="text-success">₹@item.Amount.ToString("N2")</strong></td>
                                <td>
                                    @{
                                        var paymentIcon = item.PaymentMode switch
                                        {
                                            "Cash" => "bi-cash",
                                            "Card" => "bi-credit-card",
                                            "Bank" => "bi-bank",
                                            "Online" => "bi-phone",
                                            _ => "bi-wallet2"
                                        };
                                    }
                                    <i class="bi @paymentIcon"></i> @item.PaymentMode
                                </td>
                                <td>
                                    <i class="bi bi-calendar-event text-primary"></i> 
                                    @item.TransactionDate.ToString("dd MMM yyyy")
                                </td>
                                <td>
                                    @{
                                        var statusClass = item.Status switch
                                        {
                                            "Pending" => "bg-warning",
                                            "Completed" => "bg-success",
                                            "Refunded" => "bg-info",
                                            "Cancelled" => "bg-danger",
                                            _ => "bg-secondary"
                                        };
                                    }
                                    <span class="badge @statusClass">
                                        <i class="bi bi-circle-fill" style="font-size: 0.5rem;"></i> @item.Status
                                    </span>
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info" data-bs-toggle="tooltip" title="View Details">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        @if (!item.InvoiceGenerated)
                                        {
                                            <button onclick="generateInvoice(@item.Id)" class="btn btn-sm btn-success" data-bs-toggle="tooltip" title="Generate Invoice">
                                                <i class="bi bi-file-earmark-pdf"></i>
                                            </button>
                                        }
                                        else
                                        {
                                            <a href="@item.InvoicePath" target="_blank" class="btn btn-sm btn-primary" data-bs-toggle="tooltip" title="Download Invoice">
                                                <i class="bi bi-download"></i>
                                            </a>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-cash-coin" style="font-size: 4rem; color: #e0e0e0;"></i>
                <p class="text-muted mt-3 mb-0">No transactions recorded yet.</p>
                <a asp-action="Create" class="btn btn-primary mt-3">
                    <i class="bi bi-plus-circle"></i> Create First Transaction
                </a>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        function generateInvoice(id) {
            if (!confirm('Generate invoice for this transaction?')) return;
            
            fetch(`/Transactions/GenerateInvoice/${id}`, { method: 'POST' })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        alert('Invoice generated successfully!');
                        location.reload();
                    } else {
                        alert('Failed to generate invoice: ' + (data.message || 'Unknown error'));
                    }
                })
                .catch(error => {
                    alert('Error generating invoice: ' + error);
                });
        }
    </script>
}
