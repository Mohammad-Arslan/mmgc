@model MMGC.Models.Transaction
@{
    ViewData["Title"] = "Create Transaction";
    Layout = "~/Views/Shared/_LayoutWithSidebar.cshtml";
}

<div class="page-header">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h2><i class="bi bi-cash-coin"></i> Create New Transaction</h2>
            <p>Record a new financial transaction</p>
        </div>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>
</div>

<div class="row">
    <div class="col-lg-10 col-xl-8">
        <div class="card">
            <div class="card-body">
                <form asp-action="Create" method="post" id="transactionForm" novalidate>
                    @Html.AntiForgeryToken()

                    <div asp-validation-summary="All" class="alert alert-danger" role="alert" id="validationSummary" style="display:@(ViewData.ModelState.IsValid ? "none" : "block")">
                        <strong><i class="bi bi-exclamation-triangle"></i> Please correct the errors below</strong>
                        <ul class="mb-0 mt-2">
                            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors).Select(e => e.ErrorMessage).Distinct())
                            {
                                <li>@error</li>
                            }
                        </ul>
                    </div>

                    <h5 class="mb-3"><i class="bi bi-person"></i> Patient & Transaction Type</h5>
            
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="PatientId" class="form-label"></label>
                            <select asp-for="PatientId" asp-items="ViewBag.Patients" class="form-select" id="PatientId" required>
                                <option value="">-- Select Patient --</option>
                            </select>
                            <span asp-validation-for="PatientId" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="TransactionType" class="form-label"></label>
                            <select asp-for="TransactionType" class="form-select" id="TransactionType" required>
                                <option value="">-- Select Type --</option>
                                <option value="Appointment">Appointment</option>
                                <option value="LabTest">Lab Test</option>
                                <option value="Procedure">Procedure</option>
                                <option value="Pharmacy">Pharmacy</option>
                                <option value="Other">Other</option>
                            </select>
                            <span asp-validation-for="TransactionType" class="text-danger"></span>
                        </div>
                    </div>

                    <h5 class="mb-3 mt-4"><i class="bi bi-link"></i> Related Records (Optional)</h5>

                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label asp-for="AppointmentId" class="form-label"></label>
                            <select asp-for="AppointmentId" asp-items="ViewBag.Appointments" class="form-select" id="AppointmentId">
                                <option value="">-- Select Appointment (Optional) --</option>
                            </select>
                            <span asp-validation-for="AppointmentId" class="text-danger"></span>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label asp-for="ProcedureId" class="form-label"></label>
                            <select asp-for="ProcedureId" asp-items="ViewBag.Procedures" class="form-select" id="ProcedureId">
                                <option value="">-- Select Procedure (Optional) --</option>
                            </select>
                            <span asp-validation-for="ProcedureId" class="text-danger"></span>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label asp-for="LabTestId" class="form-label"></label>
                            <select asp-for="LabTestId" asp-items="ViewBag.LabTests" class="form-select" id="LabTestId">
                                <option value="">-- Select Lab Test (Optional) --</option>
                            </select>
                            <span asp-validation-for="LabTestId" class="text-danger"></span>
                        </div>
                    </div>

                    <h5 class="mb-3 mt-4"><i class="bi bi-cash-coin"></i> Payment Details</h5>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label"></label>
                        <input asp-for="Description" class="form-control" placeholder="Enter transaction description" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Amount" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text">â‚¹</span>
                                <input asp-for="Amount" class="form-control" type="number" step="0.01" min="0" placeholder="0.00" required />
                            </div>
                            <span asp-validation-for="Amount" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="PaymentMode" class="form-label"></label>
                            <select asp-for="PaymentMode" class="form-select" id="PaymentMode" required>
                                <option value="">-- Select Payment Mode --</option>
                                <option value="Cash">Cash</option>
                                <option value="Card">Card</option>
                                <option value="Bank">Bank Transfer</option>
                                <option value="Online">Online Payment</option>
                            </select>
                            <span asp-validation-for="PaymentMode" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="TransactionDate" class="form-label"></label>
                            <input asp-for="TransactionDate" class="form-control" type="datetime-local" />
                            <span asp-validation-for="TransactionDate" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Status" class="form-label"></label>
                            <select asp-for="Status" class="form-select">
                                <option value="Pending">Pending</option>
                                <option value="Completed" selected>Completed</option>
                                <option value="Refunded">Refunded</option>
                                <option value="Cancelled">Cancelled</option>
                            </select>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ReferenceNumber" class="form-label"></label>
                        <input asp-for="ReferenceNumber" class="form-control" placeholder="Enter reference number (optional)" />
                        <small class="form-text text-muted">Transaction reference, check number, or receipt number.</small>
                        <span asp-validation-for="ReferenceNumber" class="text-danger"></span>
                    </div>

                    <hr class="my-4" />

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary" id="submitBtn">
                            <i class="bi bi-save"></i> Create Transaction
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-x-circle"></i> Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        (function () {
            // Set default datetime value if model has no date
            var td = document.getElementById('TransactionDate');
            if (td && !td.value) {
                var now = new Date();
                now.setMinutes(now.getMinutes() - now.getTimezoneOffset());
                td.value = now.toISOString().slice(0, 16);
            }

            // Client-side validation
            var form = document.getElementById('transactionForm');
            if (!form) return;

            form.addEventListener('submit', function (e) {
                var patient = document.getElementById('PatientId');
                var transactionType = document.getElementById('TransactionType');
                var amount = document.getElementById('Amount');
                var paymentMode = document.getElementById('PaymentMode');
                var hasError = false;

                // Clear previous classes
                [patient, transactionType, amount, paymentMode].forEach(el => {
                    if (el) el.classList.remove('is-invalid');
                });

                // Check required fields
                if (patient && (!patient.value || patient.value === "" || patient.value === "0")) {
                    patient.classList.add('is-invalid');
                    hasError = true;
                }

                if (transactionType && !transactionType.value) {
                    transactionType.classList.add('is-invalid');
                    hasError = true;
                }

                if (amount && (!amount.value || parseFloat(amount.value) <= 0)) {
                    amount.classList.add('is-invalid');
                    hasError = true;
                }

                if (paymentMode && !paymentMode.value) {
                    paymentMode.classList.add('is-invalid');
                    hasError = true;
                }

                if (hasError) {
                    e.preventDefault();
                    var vs = document.getElementById('validationSummary');
                    if (vs) vs.style.display = 'block';
                    var first = document.querySelector('.is-invalid');
                    if (first) first.scrollIntoView({ behavior: 'smooth', block: 'center' });
                    return false;
                }

                // Disable submit button
                var btn = document.getElementById('submitBtn');
                if (btn) {
                    btn.disabled = true;
                    btn.innerHTML = '<i class="bi bi-hourglass-split"></i> Creating...';
                }
            });
        })();
    </script>
}

